<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/list_vertical_margin"
    android:layout_marginBottom="@dimen/list_vertical_margin"
    android:padding="@dimen/default_padding"
    android:background="@drawable/food_card_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemNameTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemBrandTextView"
        app:layout_constraintStart_toStartOf="@id/itemNameTextView"
        app:layout_constraintTop_toBottomOf="@id/itemNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemCaloriesTextView"
        app:layout_constraintStart_toStartOf="@id/itemNameTextView"
        app:layout_constraintTop_toBottomOf="@id/itemBrandTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemPortionTextView"
        app:layout_constraintStart_toStartOf="@id/itemNameTextView"
        app:layout_constraintTop_toBottomOf="@id/itemCaloriesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</androidx.constraintlayout.widget.ConstraintLayout>